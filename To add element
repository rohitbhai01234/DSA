#include <stdio.h>

int main() {
    int arr[100];      
    int n, i, pos, element;

    
    printf("Enter the number of elements in the array: ");
    scanf("%d", &n);

    
    printf("Enter %d elements:\n", n);
    for(i = 0; i < n; i++) {
        scanf("%d", &arr[i]);
    }

   
    printf("Enter the position (0 to %d) where you want to insert the new element: ", n);
    scanf("%d", &pos);

    
    if(pos < 0 || pos > n) {
        printf("Invalid position!\n");
        return 1;
    }

    printf("Enter the element to insert: ");
    scanf("%d", &element);

    
    for(i = n; i > pos; i--) {
        arr[i] = arr[i - 1];
    }

   
    arr[pos] = element;
    n++; // Increase size of array

   
    printf("Array after insertion:\n");
    for(i = 0; i < n; i++) {
        printf("%d ", arr[i]);
    }

    return 0;
}
